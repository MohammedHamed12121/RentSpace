@model ProfileViewModel
@using Microsoft.AspNetCore.Identity
@{
    
}

@* TODO: add the profile image *@
<h1 class="display-4 fw-normal">@User.Identity.Name</h1>
<h4>@Model.City -@Model.State -@Model.Country </h4>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Space" asp-action="Create">Publish new space</a> 
