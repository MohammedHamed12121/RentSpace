 <div class="album py-5 bg-light">
    <div class="container">
        <h2 class="display-4 fw-normal">Your Spaces</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach (var item in Model.Space)
            {

                <partial name="_CardPartial" model="@item" />
            }
        </div>
        

    </div>
</div>


