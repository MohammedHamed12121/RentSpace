                                        <a asp-controller="Club" asp-action="Delete" asp-route-id="@club.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    } *@  
                                    <a asp-controller="Space" asp-action="Edit" asp-route-id="@space.space.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="Space" asp-action="Delete" asp-route-id="@space.space.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                </div>
                                <small class="text-muted">@space.space.SpaceCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>