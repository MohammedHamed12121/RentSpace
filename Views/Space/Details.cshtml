@model Space

<div class="container">
  
    <h1 class="my-3">@Model.Title</h1>
    @* TODO: dispaly the name of the user here this is wrong  *@
    <h4>By @User.Identity.Name </h4>

  <div class="row">
    <div class="col-md-8">
      <img src="@Model.Image" alt="" class="img-fluid">
    </div>

    <div class="col-md-4">
      <p>@Model.Description</p>
      <h3 class="my-3">Location</h3>

      <ul>
        <li>@Model.Country</li>
        <li>@Model.State</li>
        <li>@Model.City</li>
        <li>@Model.SpaceCategory</li>
      </ul>

    </div>
  </div>
</div>