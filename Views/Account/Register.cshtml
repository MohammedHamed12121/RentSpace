@model RegisterViewModel
@{
    Layout = "_WelcomeLayout";
    ViewData["Tilte"] = "Sign up";
}

<style>
    

    *{
        color: black;
    }

    section {
        max-width: 800px;
        margin: 40px auto;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    a {
        color: #28a745;
        text-decoration: none;
        font-weight: bold;
    }

    a:hover {
        color: #1e7030;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }

    ul li {
        margin-bottom: 10px;
    }

    label {
        display: block;
        margin: 10px 0 5px;
        font-weight: bold;
    }

    .cancel {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        font-size: 16px;
    }

    .form-submit{
        display: flex;
    }
    div button ,div .cancel {
        width: 50%;
        background-color: #28a745;
        color: #ffffff;
        cursor: pointer;
    }
    div .cancel {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    div .cancel a {
        color: white;
        font: inherit;
        width: 100%;
        text-align: center;
    }

    button:hover , .cancel:hover {
        background-color: #1e7030;
    }

    p {
        font-size: 14px;
    }

    p a {
        font-weight: bold;
    }
</style>


<section id="signup">
    <h2>Sign Up Today!</h2>
    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span><b>Sorry!</b>- @TempData["Error"]</span>
        </div>
    }
    <form asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" ></div>
        <div class="form-group">
            <label asp-for="EmailAddress">Username</label>
            <input asp-for="EmailAddress" >
            <span asp-validation-for="EmailAddress" ></span>
        </div>
                <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" >
            <span asp-validation-for="ConfirmPassword"></span>
        </div>

        <div class="form-submit">

            <button type="submit" >Sign up</button>
            <div class="cancel">
                <a asp-area="" asp-controller="Welcome" asp-action="Index"> Cancel</a>
            </div> 
        </div>

        <p>Already have an account? <a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></p>
    </form>
</section>